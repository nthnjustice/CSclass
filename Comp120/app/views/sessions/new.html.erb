<% provide(:title, "Log in") %>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="col-xs-10 col-sm-8 col-md-6 col-lg-4 col-xs-offset-1 col-sm-offset-2 col-md-offset-3 col-lg-offset-4 text-center">
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email, class: "loginLabel" %>
        <%= f.email_field :email, class: 'form-control loginForm' %>

        <%= f.label :password, class: "loginLabel" %>
        <%= f.password_field :password, class: 'form-control loginForm' %>

        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span id="rememberMeText">Remember me on this device</span>
        <% end %>

        <%= f.submit "Log in", class: "btn btn-primary", id: "loginButton" %>
      
      <% end %>

      <p id="newUserText">New user? <span id="signupText"><%= link_to "Sign up now!", signup_path %></span></p>
      <br>
    </div>
  </div>
</div>

<%= render "shared/aboutSection" %>
<%= render "shared/contactSection" %>