//Homework assignment 4:Loops, Functions, Parameters
//This program will take input and then repeat a mirror image of the input stream across a line refered to as "the mirror"

#include <iostream>
using namespace std;

int main() 
{
	int max;
	
	cout << "Maximum value? " ;
	cin >> max ;
	
	while (max < 0) {
		cin >> max ;
	}
	
	for (int i = 0; i < 4; i++) {
		for (int k = 0; k <= max; k++) {
			cout << k ;
		}
		
		cout << "|" ;
		
		for (int k = max; k >= 0; k--) {
			cout << k ;
		}
		cout << endl;
	}
}








