#include <iostream>
using namespace std;
//Nathan Justice 9/20/12 hw2
// iftest.cpp
//      purpose: report number of digits in an integer
//        shows: use of output, input, conditional statements
//         note: has bugs, needs work
//
//  modified by:
//         date:
//

int main()
{
	int input;
	cout << "Enter a number: ";
	cin >> input;

	if (input >= 100) {
		cout << "input has at least three or more digits" << endl;
	}
	else if ( input >= 10) {
		cout << "input has at least two digits" << endl;
	}
	else if ( input > 0) {
		cout << "input has at least one digit" << endl;
	}
	else if (input <= -100) {
	    cout << "input has at least three digits and input is negative" <<endl;
	}
	else if (input <= -10) {
	    cout << "input has at least two digits and input is negative" << endl; 
	}
	else if (input <= -1) {
	    cout << "input has at least one digit and input is negative" << endl;
	}
	else {
		cout << "input is 0 or negative" << endl;
	}
}
